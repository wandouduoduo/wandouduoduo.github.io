    background-color: #FFE4B5;
    padding: 20px 30px 60px 30px;
    border-radius: 25px 25px 25px 25px;

  .category-all-title { text-align: center; }

  .category-all { margin-top: 20px; }

  .category-all ul li {
    list-style: ">";
  }

  .category-list {
    margin: 0;
    padding: 0;
    list-style: "â˜…";
  }

  .category-list-item { margin: 5px 10px; }

